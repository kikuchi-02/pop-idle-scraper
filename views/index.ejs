<html>
  <head>
    <meta charset="UTF-8" />
    <title>アイドル情報まとめ</title>
    <link rel="stylesheet" type="text/css" href="style.css" />
  </head>
  <body>
    <h1>アイドル情報まとめ</h1>
    <main>
      <div class="idle-switcher">
        <label
          ><input
            type="checkbox"
            id="checkbox-nogizaka"
            checked
          />乃木坂46</label
        >
        <label
          ><input
            type="checkbox"
            id="checkbox-sakurazaka"
            checked
          />櫻坂46</label
        >
        <label
          ><input
            type="checkbox"
            id="checkbox-hinatazaka"
            checked
          />日向坂46</label
        >
      </div>
      <% kinds.forEach(kind =>{ %>
      <div id="kind-container-<%= kind %>">
        <% (scrapedCache[kind] || []).forEach(site => { %> <%-
        include('./partials/site', {siteTitle: site.siteTitle, posts:
        site.posts}) %> <% }) %> <% (tweetCache[kind] || []).forEach(site => {
        %> <%- include('./partials/site', {siteTitle: site.siteTitle, posts:
        site.posts}) %> <% }) %>
      </div>
      <% }) %>
    </main>
  </body>
  <script src="index.js"></script>
</html>
