<div class="about-container">
  <div class="about-date"><%= post.hDate %></div>
  <div class="about-body">
    <div class="about-body-title">
      <a href="<%= post.link %>" target="_blank"><%=post.title%></a>
    </div>
    <% if (post.summary) { %>
    <div class="about-body-summary"><%= post.summary %></div>
    <% } %>
  </div>
</div>
